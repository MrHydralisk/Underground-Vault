			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<size>(3,2)</size>
		<modExtensions>
			<li Class="UndergroundVault.VaultExtension">
				<TerminalDef>UVTerminalCemeteryS</TerminalDef>
				<FloorSize>3</FloorSize>
